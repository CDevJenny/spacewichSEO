    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Ogtitle</th>
                <th>Ogurl</th>
                <th>Ogimage</th>
                <th>Ogdescription</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for metum in metas %}
            <tr>
                <td>{{ metum.id }}</td>
                <td>{{ metum.Title }}</td>
                <td>{{ metum.Description }}</td>
                <td>{{ metum.ogtitle }}</td>
                <td>{{ metum.ogurl }}</td>
                <td>{{ metum.ogimage }}</td>
                <td>{{ metum.ogdescription }}</td>
                <td>
                    <a href="{{ path('meta_show', {'id': metum.id}) }}">show</a>
                    <a href="{{ path('meta_edit', {'id': metum.id}) }}">edit</a>
                </td>
            </tr>
